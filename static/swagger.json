{
  "openapi": "3.0.0",
  "info": {
    "title": "AI Speaking Backend",
    "version": "1.0.0"
  },
  "tags": [{ "name": "Audio", "description": "Audio related endpoints" }],
  "paths": {
    "/": {
      "get": {
        "summary": "AI Speaking Backend",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/audio": {
      "post": {
        "summary": "Upload and convert audio, returns Cloudinary URL",
        "tags": ["Audio"],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "Audio file to upload"
                  },
                  "typeWantToConvert": {
                    "type": "string",
                    "description": "Desired output format (e.g., mp3, wav)",
                    "example": "mp3"
                  },
                  "outputPath": {
                    "type": "string",
                    "description": "Desired output filename (optional; extension inferred)",
                    "example": "myfile"
                  },
                  "targetSr": {
                    "type": "integer",
                    "description": "Target sample rate (Hz)",
                    "example": 16000
                  },
                  "folder": {
                    "type": "string",
                    "description": "Cloudinary folder to upload into",
                    "example": "AISpeaker"
                  }
                },
                "required": ["file"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Upload successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "url": { "type": "string", "format": "uri" }
                  }
                },
                "example": {
                  "url": "https://res.cloudinary.com/demo/video/upload/v1234/audio/converted.wav"
                }
              }
            }
          }
        }
      }
    }
  }
}
